{
  "if": {
    "allOf": [
      {
        "field": "type",
        "equals": "Microsoft.Sql/servers/elasticPools"
      },
      {
        "field": "Microsoft.Sql/servers/elasticpools/sku.capacity",
        "greater": "[parameters('MaxPoolCapacityVCores')]"
      }
    ]
  },
  "then": {
    "effect": "Deny"
  }
 }