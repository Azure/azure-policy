{
  "properties": {
    "displayName": "API Management policies should inherit parent scope policies using <base />",
    "policyType": "BuiltIn",
    "mode": "All",
    "description": "Ensures that every API Management policy includes the <base /> tag at the beginning of each policy section - <inbound>, <outbound>, <backend>, and <on-error> - to inherit policies from parent scopes. Omitting <base /> can lead to bypassing shared rules such as authentication, logging, rate limits, and other critical controls. Learn more: https://aka.ms/apim/policies/how-to",
    "metadata": {
      "version": "1.0.0",
      "category": "API Management"
    },
    "version": "1.0.0",
    "parameters": {
      "effect": {
        "type": "string",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Audit"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "in": [
              "Microsoft.ApiManagement/service/apis/policies",
              "Microsoft.ApiManagement/service/apis/operations/policies",
              "Microsoft.ApiManagement/service/products/policies",
              "Microsoft.ApiManagement/service/workspaces/policies",
              "Microsoft.ApiManagement/service/workspaces/apis/policies",
              "Microsoft.ApiManagement/service/workspaces/apis/operations/policies",
              "Microsoft.ApiManagement/service/workspaces/products/policies"
            ]
          },
          {
            "anyOf": [
              {
                "allOf": [
                  {
                    "field": "type",
                    "equals": "Microsoft.ApiManagement/service/apis/policies"
                  },
                  {
                    "not": {
                      "allOf": [
                        {
                          "value": "[replace(replace(replace(replace(field('Microsoft.ApiManagement/service/apis/policies/value'), '\r', ''), '\n', ''), ' ', ''), '\t', '')]",
                          "contains": "<inbound><base/>"
                        },
                        {
                          "value": "[replace(replace(replace(replace(field('Microsoft.ApiManagement/service/apis/policies/value'), '\r', ''), '\n', ''), ' ', ''), '\t', '')]",
                          "contains": "<outbound><base/>"
                        },
                        {
                          "value": "[replace(replace(replace(replace(field('Microsoft.ApiManagement/service/apis/policies/value'), '\r', ''), '\n', ''), ' ', ''), '\t', '')]",
                          "contains": "<backend><base/>"
                        },
                        {
                          "value": "[replace(replace(replace(replace(field('Microsoft.ApiManagement/service/apis/policies/value'), '\r', ''), '\n', ''), ' ', ''), '\t', '')]",
                          "contains": "<on-error><base/>"
                        }
                      ]
                    }
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "field": "type",
                    "equals": "Microsoft.ApiManagement/service/apis/operations/policies"
                  },
                  {
                    "not": {
                      "allOf": [
                        {
                          "value": "[replace(replace(replace(replace(field('Microsoft.ApiManagement/service/apis/operations/policies/value'), '\r', ''), '\n', ''), ' ', ''), '\t', '')]",
                          "contains": "<inbound><base/>"
