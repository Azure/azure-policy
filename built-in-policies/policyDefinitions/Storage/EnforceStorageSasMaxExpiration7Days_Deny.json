{
  "properties": {
    "displayName": "Storage SAS tokens should adhere to 7 day maximum validity",
    "policyType": "BuiltIn",
    "mode": "Indexed",
    "description": "This policy ensures that Shared Access Signature (SAS) tokens for storage accounts are configured with a maximum validity period of 7 days or less. It denies or audits storage accounts that allow longer SAS token lifetimes or don't have appropriate expiration actions configured.",
    "metadata": {
      "version": "1.0.0",
      "category": "Storage"
    },
    "version": "1.0.0",
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Audit allows a non-compliant resource to be created, but flags it as non-compliant. Deny blocks the resource creation and update. Disable turns off the policy."
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            "anyOf": [
              {
                "field": "Microsoft.Storage/storageAccounts/sasPolicy",
                "exists": "false"
              },
              {
                "field": "Microsoft.Storage/storageAccounts/sasPolicy.sasExpirationPeriod",
                "exists": "false"
              },
              {
                "value": "[if(empty(field('Microsoft.Storage/storageAccounts/sasPolicy.sasExpirationPeriod')), 99, int(split(field('Microsoft.Storage/storageAccounts/sasPolicy.sasExpirationPeriod'), createArray(':', '.'))[0]))]",
                "greater": 7
              },
              {
                "allOf": [
                  {
                    "value": "[if(empty(field('Microsoft.Storage/storageAccounts/sasPolicy.sasExpirationPeriod')), 0, int(split(field('Microsoft.Storage/storageAccounts/sasPolicy.sasExpirationPeriod'), createArray(':', '.'))[0]))]",
                    "equals": 7
                  },
                  {
                    "anyOf": [
                      {
                        "value": "[if(empty(field('Microsoft.Storage/storageAccounts/sasPolicy.sasExpirationPeriod')), 0, int(split(field('Microsoft.Storage/storageAccounts/sasPolicy.sasExpirationPeriod'), createArray(':', '.'))[1]))]",
                        "notEquals": 0
                      },
                      {
                        "value": "[if(empty(field('Microsoft.Storage/storageAccounts/sasPolicy.sasExpirationPeriod')), 0, int(split(field('Microsoft.Storage/storageAccounts/sasPolicy.sasExpirationPeriod'), createArray(':', '.'))[2]))]",
                        "notEquals": 0
                      },
                      {
                        "value": "[if(empty(field('Microsoft.Storage/storageAccounts/sasPolicy.sasExpirationPeriod')), 0, int(split(field('Microsoft.Storage/storageAccounts/sasPolicy.sasExpirationPeriod'), createArray(':', '.'))[3]))]",
                        "notEquals": 0
                      }
                    ]
                  }
                ]
              },
              {
                "field": "Microsoft.Storage/storageAccounts/sasPolicy.expirationAction",
                "exists": "false"
              },
              {
                "field": "Microsoft.Storage/storageAccounts/sasPolicy.expirationAction",
                "notEquals": "Block"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    },
    "versions": [
      "1.0.0"
    ]
  },
  "id": "/providers/Microsoft.Authorization/policyDefinitions/7aa1c9d5-3d7e-4579-8117-d85e99211757",
  "name": "7aa1c9d5-3d7e-4579-8117-d85e99211757"
}